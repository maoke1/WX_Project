/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.clearfix:after{
        content: "";
        display: block;
        height: 0;
        clear:both;
        visibility: hidden;
    }
.left{
      float: left;
}
.right{
      float: right;
}
.topbar {
      width: 100%;
      height: 50px;
      background-color: #69c3aa;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 999;
}

.row {
      display: flex;
      align-items: center;
}

.input-box {
      width: 52%;
      height: 100%;
      align-items: center;
      float: left;
      margin-left: 6%;
      line-height: 100%;
}

.input-box text {
      font-size: 16px;
}
.top-comend {
  width: 100%;
  height: 50px;
}
.arrow-box {
  width: 10%;
  height: 100%;
  float: left;
  margin-left: 5px;
}
 
.arrow-box image {
  width: 22px;
  height: 22px;
  margin-left: 3px;
}
.redtext{
  color: red;
  font-size: 15px;
}