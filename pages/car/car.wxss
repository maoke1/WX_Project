page {
      background-color: #f5f5f5;
}
/* ==========================轮播图=================================== */

.swiper_image {
      width: 100%;
      height: 200px;
}

/* =========================middle============================= */

.middle {
      width: 100%;
      margin-top: 10px;
}

.middle .md_o {
      width: 90%;
      margin: 0 auto;
      text-align: center;
}

.middle .md_o .yifu {
      display: inline-block;
      height: 60px;
      background-color: white;
      width: 47%;
      line-height: 60px;
      border-radius: 10px;
      position: relative;
}

.middle .md_o .yifu image {
      height: 40px;
      width: 40px;
      /* margin-top: 10px; */
      margin-left: 10px;
      vertical-align: middle;
}

.middle .md_o .yifu .jyhs {
      display: inline-block;
      height: 60px;
      line-height: 60px;
      margin-left: 13px;
}

.middle .md_o .shouji {
      display: inline-block;
      margin-left: 15px;
      height: 60px;
      background-color: white;
      width: 47%;
      line-height: 60px;
      border-radius: 10px;
}

.middle .md_o .shouji image {
      height: 40px;
      width: 40px;
      vertical-align: middle;
      margin-left: 10px;
}

.middle .md_o .shouji .sjhs {
      display: inline-block;
      height: 60px;
      line-height: 60px;
      margin-left: 13px;
}

.middle .md_o .shouji text {
      vertical-align: middle;
}

.tongdao {
      margin-top: 10px;
      width: 100%;
      /* padding-left: 0px; */
      height: 30px;
      border-bottom: 1px solid #e8e6e7;
}

.tongdao image {
      height: 30px;
      width: 30px;
      vertical-align: middle;
}

/* =========================bottom============================= */

.bottom {
      width: 100%;
}
.clearfix:after{
        content: "";
        display: block;
        height: 0;
        clear:both;
        visibility: hidden;
    }

.bottom .bottom_sp {
      width: 44%;
      float: left;
      height: 210px;
      /* background-color: orange; */
      margin-top: 4%;
      margin-left: 4%;
      background-color: #fff;
}

.bottom .bottom_sp image {
      width: 100%;
      height: 140px;
}

.bottom .bottom_sp .sp_name {
      padding-left: 5px;
      height: 40px;
      font-size: 14px;
}

.bottom .bottom_sp .sp_price {
      padding-left: 5px;
      height: 20px;
}

.bottom .bottom_sp .sp_price text {
      color: red;
      font-size: 15px;
}

.dixian {
      width: 100%;
      height: 60px;
      text-align: center;
      line-height: 60px;
}

.dixian text {
      color: #909090;
      font-size: 12px;
}
