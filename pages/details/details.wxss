/* ==========================轮播图 ==========================*/
.spxq{
  margin-bottom: 67px;
}
.swiper_image {
  width: 100%;
}
.auto-img{
  width: 100%;
  display: block;
}

/*========================= 商品头部==================== */

.sp_title {
  width: 100%;
  height: 100px;
  border-bottom: 1px solid #e8e6e7;
  background-color: #fff;
}

.sp_price {
  color: red;
  font-size: 15px;
  line-height: 40px;
  height: 40px;
  display: block;
  width: 90%;
  margin: 0 auto;
  position: relative
}

.oldPrice {
  color: #535353;
  font-size: 15px;
  text-decoration: line-through;
  margin-left: 10px;
}
.yuexiao{
  position: absolute;
  color: #a1a1a1;
  right: 0px;
  font-size: 15px;
  
}
.sp_tl {
  height: 60px;
  border-bottom: 1px solid #e8e6e7;
}

.sp_left {
  height: 60px;
  width: 79%;
  float: left;
  border-right: 1px solid #e8e6e7;
  line-height: 60px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.sp_left text {
  font-size: 16px;
  margin-left: 5%;
}

.sp_right {
  width: 20%;
  float: left;
  text-align: center;
}

.sp_right image {
  width: 30px;
  height: 30px;
  vertical-align: middle;
}

.sp_right text {
  display: block;
  font-size: 15px;
}

.sp_right .lili {
  padding-top: 10%;
}

.li_top {
  width: 100%;
  height: 60%;
}

.li_bottom {
  width: 100%;
  height: 40%;
  text-align: center;
  line-height: 100%;
}

.li_bottom text {
  font-size: 12px;
}

/* ==============发货======================== */

.fahuo {
  line-height: 40px;
  height: 40px;
  font-size: 15px;
  background-color: #fff;
}

.ff {
  width: 90%;
  margin: 0 auto;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

/* ==============内容======================== */

.spp {
  height: 30px;
  line-height: 30px;
  text-align: center;
}

.content {
  background-color: #fff;
  margin-top: 15px;
  margin-bottom: 55px;
  /* width: 100%; */
}

.con_li {
  width: 90%;
  margin: 0 auto;
}

.con_li text {
  font-size: 15px;
}

/* ===============底部导航============ */

.goods_bottom_btn {
  position: fixed;
  bottom: 0px;
  left: 0px;
  height: 47px;
  border-top: 1px solid #e5e5e5;
  width: 100%;
  background: #fff;
}

.goods_bottom_btn image {
  float: left;
  width: 22px;
  height: 22px;
}

.goods_bottom_btn .btn {
  float: left;
  width: 30%;
  text-align: center;
  height: 47px;
  line-height: 47px;
  font-size: 12px;
  color: #fff;
}

.goods_bottom_btn .bt3, .goods_bottom_btn .bt4 {
  width: 35%;
}

.goods_bottom_btn .num {
  width: 22px;
  height: 22px;
  margin: 13px auto;
  position: relative;
}

.goods_bottom_btn .num text {
  position: absolute;
  top: 0px;
  right: -6px;
  width: 14px;
  height: 14px;
  background: #f00;
  color: #fff;
  border-radius: 50%;
  font-size: 10px;
  text-align: center;
  line-height: 12px;
}

.goods_bottom_btn .bt3 {
  background: #fcae00;
}

.goods_bottom_btn .bt4 {
  background: #ff163e;
}

.hot-price {
  color: #e4393c;
  margin-right: 15px;
  font-size: 14px;
}

.old-price {
  color: #aaa;
  font-size: 12px;
  text-decoration: line-through;
}
