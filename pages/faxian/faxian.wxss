page {
  background-color: #f5f5f5;
}

.faxian {
  width: 100%;
  height: 100%;
}

/* ===========================页签切换效果================== */

.nav {
  display: flex;
  flex-direction: row;
}

.select {
  font-size: 14px;
  color: red;
  width: 50%;
  text-align: center;
  height: 45px;
  line-height: 45px;
  border-bottom: 2px solid #69c3aa;
}

.normal {
  font-size: 12px;
  color: black;
  width: 50%;
  text-align: center;
  height: 45px;
  line-height: 45px;
}

/* ===================头部===================== */

.faxian_top {
  height: 30px;
  width: 100%;
  line-height: 25px;
  text-align: center;
  /* position: fixed; */
}

.faxian_top .txt1 {
  margin-left: 20px;
}

.faxian_top .txt0 {
  display: inline-block;
  height: 30px;
  line-height: 30px;
  width: 10%;
  border-bottom: 1px solid #69c3aa;
}

/* =======================中部============================ */

.faxian_middle {
  width: 100%;
}

.middle_one {
  height: 130px;
  position: relative;
  width: 90%;
  margin: 20px auto;
}

.faxian_middle .fx_xx {
  display: block;
  width: 100%;
  height: 130px;
  /* background-color: orange; */
  border-radius: 5px;
}

.faxian_middle .middle_one .mm {
  z-index: 100;
  position: absolute;
  left: 0;
  bottom: 0;
  color: black;
  font-size: 15px;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  width: 100%;
  background: linear-gradient(#dfdad7, #090b0a);
}

.faxian_middle .middle_one .mm text {
  color: #fff;
  margin-left: 15px;
}
